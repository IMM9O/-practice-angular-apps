{
  "files.exclude": {
    "node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "editor.formatOnSave": true,
  "css.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "prettier.singleQuote": true,
  "prettier.stylelintIntegration": true,
  "html.format.wrapLineLength": 120,
  "html.format.wrapAttributes": "force"
}
